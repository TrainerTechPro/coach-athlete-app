generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          Role      @default(ATHLETE)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]

  // Coach-specific relations
  managedAthletes AthleteCoach[] @relation("CoachRelation")
  createdWorkouts Workout[]      @relation("WorkoutCreator")

  // Athlete-specific relations
  coaches         AthleteCoach[] @relation("AthleteRelation")
  assignedWorkouts WorkoutAssignment[]
  workoutLogs     WorkoutLog[]
  exerciseLogs    ExerciseLog[]


  // Training session relations
  coachSessions   TrainingSession[] @relation("CoachSessions")
  athleteSessions TrainingSession[] @relation("AthleteSessions")
  throwLogs       ThrowLog[]
}

model AthleteCoach {
  id        String   @id @default(cuid())
  athleteId String
  coachId   String
  createdAt DateTime @default(now())
  athlete   User     @relation("AthleteRelation", fields: [athleteId], references: [id], onDelete: Cascade)
  coach     User     @relation("CoachRelation", fields: [coachId], references: [id], onDelete: Cascade)
  @@unique([athleteId, coachId])
}

model Exercise {
  id            String         @id @default(cuid())
  name          String
  description   String?
  instructions  String?
  muscleGroups  String[]
  equipment     String[]
  difficulty    Difficulty     @default(BEGINNER)
  videoUrl      String?
  imageUrl      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  workoutExercises WorkoutExercise[]
  exerciseLogs  ExerciseLog[]
}

model Workout {
  id          String   @id @default(cuid())
  name        String
  description String?
  duration    Int?     // Duration in minutes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String
  creator     User     @relation("WorkoutCreator", fields: [createdBy], references: [id])

  exercises   WorkoutExercise[]
  assignments WorkoutAssignment[]
  logs        WorkoutLog[]
}

model WorkoutExercise {
  id         String   @id @default(cuid())
  workoutId  String
  exerciseId String
  sets       Int?
  reps       Int?
  weight     Float?
  duration   Int?     // Duration in seconds
  restTime   Int?     // Rest time in seconds
  notes      String?
  order      Int      @default(0)

  workout    Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
}

model WorkoutAssignment {
  id           String    @id @default(cuid())
  workoutId    String
  athleteId    String
  assignedDate DateTime  @default(now())
  dueDate      DateTime?
  completed    Boolean   @default(false)
  completedAt  DateTime?
  notes        String?

  workout      Workout   @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  athlete      User      @relation(fields: [athleteId], references: [id], onDelete: Cascade)

  @@unique([workoutId, athleteId, assignedDate])
}

model WorkoutLog {
  id           String   @id @default(cuid())
  workoutId    String
  athleteId    String
  startedAt    DateTime @default(now())
  completedAt  DateTime?
  duration     Int?     // Duration in minutes
  notes        String?
  rating       Int?     // 1-5 rating of workout

  workout      Workout  @relation(fields: [workoutId], references: [id])
  athlete      User     @relation(fields: [athleteId], references: [id])
  exerciseLogs ExerciseLog[]
}

model ExerciseLog {
  id           String     @id @default(cuid())
  workoutLogId String
  exerciseId   String
  athleteId    String
  sets         Int?
  reps         Int?
  weight       Float?
  duration     Int?       // Duration in seconds
  notes        String?
  completed    Boolean    @default(false)
  createdAt    DateTime   @default(now())

  workoutLog   WorkoutLog @relation(fields: [workoutLogId], references: [id], onDelete: Cascade)
  exercise     Exercise   @relation(fields: [exerciseId], references: [id])
  athlete      User       @relation(fields: [athleteId], references: [id])
}

enum Role {
  COACH
  ATHLETE
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}





enum DrillType {
  FULL_THROW
  STAND_THROW
  GLIDE_DRILL
  SPIN_DRILL
  TECHNICAL_DRILL
  STRENGTH_DRILL
  MOBILITY_DRILL
  OTHER
}

enum FoulReason {
  OUT_FRONT
  SECTOR_LEFT
  SECTOR_RIGHT
  LATE_BLOCK
  BALANCE_LOSS
  FOOTWORK_ERROR
  RELEASE_ERROR
  OTHER
}

enum SessionStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model TrainingSession {
  id           String        @id @default(cuid())
  date         DateTime
  focus        String
  description  String?
  coachId      String
  athleteId    String
  status       SessionStatus @default(PLANNED)
  sessionRPE   Int?          // 1-10 scale, logged by athlete
  notes        String?       // Post-session notes
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  coach        User          @relation("CoachSessions", fields: [coachId], references: [id])
  athlete      User          @relation("AthleteSessions", fields: [athleteId], references: [id])
  drills       SessionDrill[]
  throwLogs    ThrowLog[]

  @@index([coachId])
  @@index([athleteId])
  @@index([date])
}

model SessionDrill {
  id              String    @id @default(cuid())
  sessionId       String
  drillType       DrillType
  implementWeight String    // e.g., "16lb", "2kg"
  targetReps      Int
  description     String?
  order           Int       @default(0)

  session         TrainingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  throwLogs       ThrowLog[]

  @@index([sessionId])
}

model ThrowLog {
  id              String      @id @default(cuid())
  sessionId       String
  drillId         String
  athleteId       String
  throwNumber     Int         // 1, 2, 3, etc. within the drill
  distance        Float?      // in meters
  isFoul          Boolean     @default(false)
  foulReason      FoulReason?
  notes           String?
  createdAt       DateTime    @default(now())

  session         TrainingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  drill           SessionDrill @relation(fields: [drillId], references: [id], onDelete: Cascade)
  athlete         User @relation(fields: [athleteId], references: [id])

  @@index([sessionId])
  @@index([drillId])
  @@index([athleteId])
  @@index([createdAt])
}
